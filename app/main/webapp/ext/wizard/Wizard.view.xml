<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:goals="main.SharedBlocks.goals"
	xmlns:personal="main.SharedBlocks.personal"
	xmlns:employment="main.SharedBlocks.employment"
    xmlns:forms="sap.ui.layout.form"



	controllerName="main.ext.wizard.Wizard"
    
    	xmlns:form="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns:u="sap.ui.unified"


        xmlns:macrosTable="sap.fe.macros.table"
        xmlns:macros="sap.fe.macros" xmlns:f="sap.f" xmlns:cards="sap.f.cards"
    
    >

<m:NavContainer id="wizardNavContainer">
			<m:pages>
				<m:Page
				id="wizardContentPage"
				showHeader="false">
					<m:content>
						<m:Wizard id="CreateProductWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--m:content"
								complete="wizardCompletedHandler">
							<m:WizardStep id="ProductInfoStep"
										title="Customer"
										validated="true"
                                        activate="additionalInfoValidation"
                                        >

<m:VBox id="mybox">


	<ObjectPageLayout id="ObjectPageLayout"
		
		upperCaseAnchorBar="false">
		

		

		<sections>
			

			<ObjectPageSection titleUppercase="false" id="personalSection" title="Customer" importance="Medium">
					
					<subSections>
					<ObjectPageSubSection id="personalSectionSS1" title="Address" titleUppercase="false">
						<blocks>
							<personal:BlockPhoneNumber id="phone"/>
							<personal:BlockSocial id="social"/>
							<personal:BlockMailing id="mailing" columnLayout="1"/>
						</blocks>

                        <form:SimpleForm
								title="Installer"
								minWidth="1024"
								editable="true"
								layout="ResponsiveGridLayout">
							<form:content>
                            
								<m:Label text="First Name"/>
                                <m:Input valueStateText="Enter 6 symbols or more"
											valueState="{/firstNameState}" id="fname" liveChange="additionalInfoValidation"
											placeholder="First Name" value="{/productName}"/>
								
								<m:Label text="Last Name"/>
                                <m:Input valueStateText="Enter 6 symbols or more"
											valueState="{/lastNameState}" id="lname" liveChange="additionalInfoValidation"
											placeholder="Last Name" value="{/productWeight}"/>

                                <m:Label text="Completion Date" />
                                <m:DatePicker liveChange="completionDateChange" id="completionDate"
								 	valueState="{/completionDateState}"
									placeholder="Enter CompletionDate"
									value="{
                                    path: '/date',
                                    type: 'sap.ui.model.type.Date'}" />
							</form:content>
						</form:SimpleForm> 

					</ObjectPageSubSection>

					
				</subSections>
			</ObjectPageSection>

            

			
		</sections>
		
	</ObjectPageLayout>

</m:VBox>



    </m:WizardStep>


							<m:WizardStep id="PricingStep"
										activate="pricingActivate"
										complete="pricingComplete"
										validated="true"
										title="Dealer">
								<ObjectPageLayout id="ObjectPageLayout2"
		
		    upperCaseAnchorBar="false">
		

		

		<sections>
			

			<ObjectPageSection titleUppercase="false" id="dealerPage" title="Dealer" importance="Medium">
					
					<subSections>
					<ObjectPageSubSection id="dealerSubSection" title="Dealer" titleUppercase="false">
						<blocks>
							<personal:BasicInfo id="basic"/>
							<personal:Address id="address"/>
							<personal:Contact id="contact" columnLayout="1"/>
						</blocks>
					</ObjectPageSubSection>

					
				</subSections>
			</ObjectPageSection>

            

			
		</sections>
		
	</ObjectPageLayout>

							</m:WizardStep>


<m:WizardStep id="ProductTypeStep"
										title="Items"
										validated="true">
								 <f:DynamicPage id="Main">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <m:Title text="Items Data"/>
                </f:heading>
                <f:expandedContent>
                    <macros:FilterBar metaPath="" search=".onSearch"
                                      filterChanged=".onFiltersChanged"/>
                </f:expandedContent>
                
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
           <macros:Table
           
							metaPath="/Items/@com.sap.vocabularies.UI.v1.LineItem"
							readOnly="true"
							id="LineItemTablePageCustomActions"
							busy="{ui>/isBusy}"
                       />
                       

        </f:content>
    </f:DynamicPage>
							</m:WizardStep>





						</m:Wizard>
					</m:content>
					<m:footer>
						<m:OverflowToolbar>
							<m:ToolbarSpacer/>
							<m:Button text="Cancel" press="handleWizardCancel"/>
						</m:OverflowToolbar>
					</m:footer>
				</m:Page>
				
			</m:pages>
		</m:NavContainer>
</mvc:View>
